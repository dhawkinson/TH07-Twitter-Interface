.app--section
    ul.app--user--list
        each friend in friends.users
            li
                .circle--fluid
                    .circle--fluid--cell.circle--fluid--primary
                        a (href=`"http://www.twitter.com/${friend.screen_name}`, target='_blank'").app--tweet--author
                            .app--avatar (style=`background-image: url('${friend.profile_image_url}')`)
                                img (src=url( `${user.profile_image_url}` ))
                            h4= friend.name
                            p='@'+ friend.screen_name
                    .circle--fluid--cell
                        a (class=friend.following ? 'button button-text' : 'button') #{friend.following ? 'Unfollow' : 'Follow'}
