header.circle--header `(style=#{user.screen_name}?background: url("#{user.profile_banner_url}");background-size: 
cover : '')`
    .bounds
        .circle--fluid
            .circle--fluid--cell
                a.logo (href=`http://www.twitter.com/${user.screen_name}`, target='_blank')
                    img(src='/static/images/twitter.svg')
                    h1 `#{user}?@#{user.screen_name} : ''}`
            .circle--fluid--cell.align-right
                nav
                    ul.circle--inline
                        li
                            a #{user ? 'Sign Out' : 'Sign In'}

